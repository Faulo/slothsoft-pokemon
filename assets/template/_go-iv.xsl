<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">		<!--<xsl:variable name="imageHost" select="'http://media.bisafans.de/c5cf8b6/pokemon/gen2/kristall/normal/'"/>-->	<xsl:variable name="imageHost" select="'http://media.bisafans.de/c5cf8b6/pokemon/gen5/sw/normal/'"/> 	<xsl:template match="/data">		<html>			<head><title>Slothsoft - Pokemon</title>			<style type="text/css"><![CDATA[html {	overflow: scroll;	padding: 1em;}* {	padding: 0;	margin: 0;}li {	display: inline-block;	width: 4em;	white-space: normal;	font-family: sans-serif;	border: 1px solid silver;	margin: 0.25em;	padding: 0.25em;}dt, dd {	display: inline-block;	width: 50%;}table {	border-spacing: 0;}td {}img {	display: block;	height: 100%;	image-rendering: -moz-crisp-edges;         /* Firefox */	image-rendering:   -o-crisp-edges;         /* Opera */	image-rendering: -webkit-optimize-contrast;/* Webkit (non-standard naming) */	image-rendering: crisp-edges;}ul {	overflow: auto;	height: 100%;}h2 {	padding-left: 0.25em;}.img {	height: 192px;}.name {	height: 36px;	width: 10em;}.stat {	height: 36px;}.stat > * {	display: inline-block;	width: 8em;}.iv {	height: 156px;}			]]></style>			</head>						<body>				<xsl:apply-templates select="*/trainer"/>			</body>		</html>	</xsl:template>		<xsl:template match="trainer">				<xsl:for-each select="mon">			<xsl:variable name="id" select="format-number(@id, '000')"/>			<table>				<tr>					<td rowspan="2" class="img">						<img src="{$imageHost}{$id}.png"/>					</td>					<td class="name">						<h2>							<xsl:value-of select="@name"/>						</h2>					</td>					<td class="stat">						<span>CP: <xsl:value-of select="stat[last()]/@cp"/></span>						<span>HP: <xsl:value-of select="stat[last()]/@hp"/></span>						<span>Stardust: <xsl:value-of select="stat[last()]/@stardust"/></span>						<span>Level: <xsl:value-of select="iv[last()]/@lvl"/></span>					</td>				</tr>				<tr>					<td colspan="2" class="iv">						<ul>							<xsl:for-each select="iv">								<li>									<dl>										<dt>HP:</dt>										<dd><xsl:value-of select="@hp"/></dd>										<dt>Att:</dt>										<dd><xsl:value-of select="@att"/></dd>										<dt>Def:</dt>										<dd><xsl:value-of select="@def"/></dd>									</dl>								</li>							</xsl:for-each>						</ul>					</td>				</tr>			</table>		</xsl:for-each>	</xsl:template></xsl:stylesheet>