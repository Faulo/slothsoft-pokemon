<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0" xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">	<xsl:variable name="monList" select="//mon" />	<xsl:template match="/data">		<html>			<head>				<title>Pokemon Teams - Slothsoft</title>				<style type="text/css"><![CDATA[ul {	margin: auto;}li {	display: inline-block;}img {	display: block;	max-height: 192px;	max-width: 192px;	margin: auto;}img.gen1, img.gen2, img.gen3, img.gen4, img.gen5 {	height: 192px;	image-rendering: -moz-crisp-edges;         /* Firefox */	image-rendering:   -o-crisp-edges;         /* Opera */	image-rendering: -webkit-optimize-contrast;/* Webkit (non-standard naming) */	image-rendering: crisp-edges;}img.icon {	height: 150px;	image-rendering: -moz-crisp-edges;         /* Firefox */	image-rendering:   -o-crisp-edges;         /* Opera */	image-rendering: -webkit-optimize-contrast;/* Webkit (non-standard naming) */	image-rendering: crisp-edges;}figcaption {	text-align: center;	font-family: calibri;	padding-bottom: 10px;}table {	border-spacing: 0 1em;	table-layout: fixed;}th, td {	padding: 0;}a {	display: block;}a:hover {	background: rgba(0, 0, 0, 0.1);}			]]></style>			</head>			<body>				<h1>Pokemon Teams</h1>				<xsl:for-each select="//player">					<h2>						<xsl:value-of select="@name" />					</h2>					<table>						<xsl:for-each select="team">							<xsl:variable name="team" select="." />							<tr>								<th>									<xsl:value-of select="@name" />								</th>								<xsl:for-each select="member">									<xsl:variable name="member" select="." />									<xsl:variable name="mon" select="$monList[$member/@name = @name-de | @name-en]" />									<xsl:variable name="image" select="$mon/image[@type = $team/@gen]" />									<td>										<a href="{$mon/@href-en}" title="{$mon/@name-en}">											<img src="{$image/@href}" class="{$image/@type}" />										</a>									</td>								</xsl:for-each>							</tr>						</xsl:for-each>					</table>				</xsl:for-each>			</body>		</html>	</xsl:template></xsl:stylesheet>