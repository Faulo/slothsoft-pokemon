<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">		<xsl:variable name="monList" select="//mon"/> 	<xsl:template match="/data">		<html>			<head><title>Pokemon Sprites - Slothsoft</title>			<style type="text/css"><![CDATA[html {	}ul {	margin: auto;}li {	display: inline-block;}img {	display: block;	max-height: 192px;	max-width: 192px;	margin: auto;}img.gen1, img.gen2, img.gen3, img.gen4, img.gen5 {	height: 192px;	image-rendering: -moz-crisp-edges;         /* Firefox */	image-rendering:   -o-crisp-edges;         /* Opera */	image-rendering: -webkit-optimize-contrast;/* Webkit (non-standard naming) */	image-rendering: crisp-edges;}img.icon {	height: 150px;	image-rendering: -moz-crisp-edges;         /* Firefox */	image-rendering:   -o-crisp-edges;         /* Opera */	image-rendering: -webkit-optimize-contrast;/* Webkit (non-standard naming) */	image-rendering: crisp-edges;}figcaption {	text-align: center;	font-family: calibri;	padding-bottom: 10px;}table {	border-spacing: 0 1em;	table-layout: fixed;}th, td {	padding: 0;}			]]></style>			</head>						<body>				<h1>Pokemon Sprites</h1>				<table>					<xsl:for-each select="$monList">						<tr>							<th>								<xsl:value-of select="concat('#', @no)"/><br/>								<a href="{@href-de}" rel="external" target="_blank"><xsl:value-of select="@name-de"/></a><br/>								<a href="{@href-en}" rel="external" target="_blank"><xsl:value-of select="@name-en"/></a><br/>								Stat Total:<br/>								<samp><xsl:value-of select="@stat-total"/></samp>							</th>							<xsl:for-each select="image">								<xsl:sort select="position()" order="descending"/>								<td><img src="{@href}" class="{@type}"/></td>							</xsl:for-each>						</tr>					</xsl:for-each>				</table>				<!--				<ul>					<xsl:for-each select="$monList">						<li>							<figure>								<img src="{@img}"/>								<figcaption><xsl:value-of select="concat('#', @no, ' ', @name)"/></figcaption>							</figure>						</li>					</xsl:for-each>				</ul>				-->			</body>		</html>	</xsl:template></xsl:stylesheet>